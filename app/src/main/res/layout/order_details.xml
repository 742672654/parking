<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/order_details_s0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_shape">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/order_details_a00"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="车牌号码："
            android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a1"
            android:layout_toRightOf="@id/order_details_a00"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:textColor="@color/blue_239DFD"
            android:text="0000"
            android:textSize="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_details_s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_shape"
        android:layout_below="@id/order_details_s0">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/order_details_a2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="应缴费用："
            android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a22"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/order_details_a2"
            android:textColor="@color/blue_239DFD"
            android:gravity="center"
            android:text="20"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/order_details_a22"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="元"
            android:textSize="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_details_s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_shape"
        android:layout_below="@id/order_details_s1">
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/order_details_a03"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#32221E"
        android:text="总缴费用："
        android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/order_details_a03"
            android:gravity="center"
            android:textColor="@color/blue_239DFD"
            android:text="20"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a003"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/order_details_a3"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="元"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/order_details_a033"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/order_details_a003"
            android:gravity="center"
            android:text="预缴费用："
            android:textColor="#32221E"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/order_details_a33"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/order_details_a033"
            android:textColor="@color/blue_239DFD"
            android:gravity="center"
            android:text="20"
            android:textSize="17dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/order_details_a33"
            android:gravity="center|left"
            android:text="元"
            android:textColor="#32221E"
            android:textSize="17dp" />


</RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_details_s3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_shape"
        android:layout_below="@id/order_details_s2">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/order_details_a04"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="停车时长："
            android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a4"
            android:layout_toRightOf="@id/order_details_a04"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:textColor="@color/blue_239DFD"
            android:text="0000"
            android:textSize="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_details_s4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_shape"
        android:layout_below="@id/order_details_s3">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/order_details_a05"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="入场时间："
            android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a5"
            android:layout_toRightOf="@id/order_details_a05"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:textColor="@color/blue_239DFD"
            android:text="0000"
            android:textSize="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_details_s5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_shape"
        android:layout_below="@id/order_details_s4">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/order_details_a06"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#32221E"
            android:text="修改车位："
            android:textSize="17dp" />

        <TextView
            android:id="@+id/order_details_a6"
            android:layout_toRightOf="@id/order_details_a06"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:textColor="@color/blue_239DFD"
            android:text="0000"
            android:textSize="17dp" />

    </RelativeLayout>



    <Button
        android:id="@+id/soufei"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_below="@id/order_details_s5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_transformation"
        android:text="收费出场"
        android:textColor="@color/nfc_dialog"
        android:textSize="20sp" />

    <Button
        android:id="@+id/taofei"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_below="@id/soufei"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_transformation"
        android:text="逃费处理"
        android:textColor="@color/nfc_dialog"
        android:textSize="20sp" />

</RelativeLayout>